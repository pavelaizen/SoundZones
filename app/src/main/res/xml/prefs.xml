<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:dialogTitle="@string/ip_address"
        android:inputType="text"
        android:key="pref_key_ip_address"
        android:summary="Server IP"
        android:title="@string/ip_address"/>

    <EditTextPreference
        android:dialogTitle="Primary Music Port"
        android:inputType="number"
        android:key="pref_master_music_port"
        android:summary="Primary Music Port"
        android:title="Primary Music Port"/>
    <EditTextPreference
        android:dialogTitle="Secondary Music Port"
        android:inputType="number"
        android:key="pref_secondary_music_port"
        android:summary="Secondary Music Port"
        android:title="Secondary Music Port"/>
    <EditTextPreference
        android:dialogTitle="Primary Volume Port"
        android:inputType="number"
        android:key="pref_volume_port"
        android:summary="Primary Volume Port"
        android:title="Primary Volume Port"/>
    <EditTextPreference
        android:dialogTitle="Noise Port"
        android:inputType="number"
        android:key="pref_noise_port"
        android:summary="Noise Port"
        android:title="Noise Port"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="pref_player_type"
        android:summary="Local or Car Player"
        android:title="Music Player Type"/>
    <ListPreference
        android:key="key_user_id"
        android:summary="-1"
        android:title="Selected user"/>
    <ListPreference
        android:entries="@array/wait_delay"
        android:entryValues="@array/wait_delay"
        android:key="key_wait_sec"
        android:summary="15"
        android:title="Accept/Great Delay in seconds"/>
</PreferenceScreen>